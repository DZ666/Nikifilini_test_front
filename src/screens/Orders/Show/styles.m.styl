@import '../../../common.styl'

.screenWrapper
  display flex
  justify-content center
  align-items center

  width 100%
  height 100%
  max-height 100vh
  overflow-y auto

  .screen
    width 100%
    height 100%
    max-width calc(100% - 65px)
    max-height calc(100vh - 65px)

    background-color #fff
    
    box-shadow 0px 4px 20px rgba(0, 0, 0, 0.25)
    border-radius 8px
    overflow hidden

    .loading
      display flex
      justify-content center
      align-items center
      height 100%

    .pagination
      display flex
      justify-content center
      margin-top 32px
      margin-bottom 64px
      gap 16px

    .body
      display flex
      flex-direction column

      padding 16px
