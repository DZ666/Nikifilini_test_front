@import '../../common.styl'

.Empty
  display flex
  flex-direction column
  align-items center
  justify-content center
  gap 16px
  padding 32px

  .title
    font-size 24px
    font-weight 500
    color $primary-grey

  .description
    font-size 16px
    font-weight 400
    color $primary-grey
    text-align center

  .button
    width 100%
    max-width 240px
    height 48px
    border-radius 4px
    background $primary
    color white
    font-size 16px
    font-weight 500
    cursor pointer
    transition background .2s

    &:hover
      background alpha($primary, 10%)
